<!DOCTYPE html>
<html>
  <head>
    <title>Riskcovry</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h2>Google Auth</h2>
      <% if current_user%>
        <%= link_to "Logout", "/sign_out", id: "sign_out" %>
      <% end %>
    </header>
    <div class="box">
      <% if flash.alert %>
        <div id="error_explanation">
          <ul>
           <li><%= flash.alert %></li>
          </ul>
        </div>
      <% end %>
      <%= yield %>
    </div>
    <footer>
      <p>Â© 2018 Google Auth</p>
    </footer>
  </body>
</html>
